<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/load_data" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SugarORM" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveAllSugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_to_db" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSelectAllSugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_all" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDeleteAllSugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_all" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Realm" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveAllRealm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_to_db" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSelectAllRealm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_all" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDeleteAllRealm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_all" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Room" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveAllRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_to_db" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSelectAllRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_all" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDeleteAllRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_all" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="SQLite" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSaveAllSQLite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_to_db" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSelectAllSQLite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_all" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDeleteAllSQLite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_all" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
